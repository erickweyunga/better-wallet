{
  "expo": {
    "name": "better-wallet",
    "slug": "better-wallet",
    "version": "0.1.0",
    "orientation": "portrait",
    "scheme": "betterwallet",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "associatedDomains": ["applinks:better-wallet.tz"],
      "bundleIdentifier": "com.app.better-wallet",
      "icon": {
        "dark": "./assets/brand/ios-dark.png",
        "light": "./assets/brand/ios-light.png",
        "tinted": "./assets/brand/ios-tinted.png"
      },
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/brand/adaptive-icon.png",
        "monochromeImage": "./assets/brand/adaptive-icon.png",
        "backgroundColor": "#31A71B"
      },
      "package": "com.app.betterwallet",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/brand/adaptive-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#FFFFFF",
          "image": "./assets/brand/splash-icon-light.png",
          "dark": {
            "backgroundColor": "#000000",
            "image": "./assets/brand/splash-icon-dark.png"
          },
          "resizeMode": "contain",
          "imageWidth": 200
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Font-Regular.ttf",
            "./assets/fonts/Font-Medium.ttf",
            "./assets/fonts/Font-SemiBold.ttf",
            "./assets/fonts/Font-Bold.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Font",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Font-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/Font-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/Font-SemiBold.ttf",
                    "weight": 600
                  },
                  {
                    "path": "./assets/fonts/Font-Bold.ttf",
                    "weight": 700
                  }
                ]
              }
            ]
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
